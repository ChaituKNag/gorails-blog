<%= form_with url: url, method: method, model: blog do |form| %>
    <% if form.object.errors.any? %>
        <% form.object.errors.full_messages.each do |message|%>
            <p style="color: red"><%= message %></p>
        <% end %>
    <% end %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>

    <%= form.submit %>
<% end %>
